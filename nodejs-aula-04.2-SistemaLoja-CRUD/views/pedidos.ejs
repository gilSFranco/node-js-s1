<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastrar Pedido</h1>
            </div>
            <div class="card-body">
                <form action="/pedidos/new" method="post">
                    <label for="numero">Numero do pedido:</label>
                    <input type="text" name="numero" id="numero" placeholder="Insira o numero do pedido" class="form-control" required>

                    <label for="valor">Valor:</label>
                    <input type="text" name="valor" id="valor" placeholder="Insira o valor do pedido" class="form-control" required>

                    <br>

                    <button class="btn btn-success">Cadastrar</button>
                </form>
                <hr>
            </div>
        </div>
    </div>

    <br>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Pedidos</h1>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Número:</th>
                            <th>Valor:</th>
                            <th style="text-align: center;" colspan="2">Ações:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pedidos.forEach(pedido => { %>
                        <tr>
                            <td><img src="imgs/order.png" width="30px"></td>
                            <td><%= pedido.numero %></td>
                            <td><%= pedido.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td><a href="/pedidos/update/<%= pedido._id %>" class="btn btn-primary">Editar</a></td>
                            <td><a href="/pedidos/delete/<%= pedido._id %>" class="btn btn-danger">Excluir</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>
