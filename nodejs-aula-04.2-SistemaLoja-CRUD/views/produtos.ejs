<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastrar Produto</h1>
            </div>
            <div class="card-body">
                <form action="/produtos/new" method="post">
                    <label for="nome">Nome do Produto:</label>
                    <input type="text" name="nome" id="nome" placeholder="Insira o nome do produto" class="form-control" required>

                    <label for="preco">Preço:</label>
                    <input type="text" name="preco" id="preco" placeholder="Insira o preço do produto" class="form-control" required>

                    <label for="categoria">Categoria:</label>
                    <input type="text" name="categoria" id="categoria" placeholder="Insira o categoria do produto" class="form-control" required>

                    <br>

                    <button class="btn btn-success">Cadastrar</button>
                </form>
                <hr>
            </div>
        </div>
    </div>

    <br>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Produtos</h1>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome:</th>
                            <th>Preço:</th>
                            <th>Categoria:</th>
                            <th style="text-align: center;" colspan="2">Ações:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                        <tr>
                            <td><img src="imgs/product.png" width="30px"></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td><%= produto.categoria %></td>
                            <td><a href="/produtos/update/<%= produto._id %>" class="btn btn-warning text-white">Editar</a></td>
                            <td><a href="/produtos/delete/<%= produto._id %>" class="btn btn-danger">Excluir</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>
