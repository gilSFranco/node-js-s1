<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

    <div class="container col-4">
        <div class="card mt-4">
            <div class="card-header">
                <h2 class="text-center">Login de Administrador</h2>
            </div>
            <div class="card-body m-auto">
                <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos do painel.</p>
                <form action="/authenticate" method="post">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="email@exemplo.com" required>

                    <br>

                    <label for="password">Senha:</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Insira sua senha" required>

                    <br>

                    <button type="submit" class="btn btn-success">Entrar</button>
                </form>

                <hr>

                <h6>Não possui uma conta?<a href="/cadastro">Cadastra-se.</a></h6>
            </div>
        </div>
    </div>

